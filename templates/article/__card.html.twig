<div    class="article"
        style="{% if loop.index is divisible by(2) %}grid-area: {{ loop.index }} / 1;{% else %}grid-area: {{ loop.index }} / 2;{% endif %}">
    <div class="article-content">
        <a href="{{ path('article', {'slug': article.slug })}}" target="_blank">
            <img    class="article-thumbnail {% if loop.index is divisible by(2) %}shadow-right{% else %}shadow-left{% endif %}"
                    src="{{ vich_uploader_asset(article,'thumbnailFile')}}"
                    alt="{{article.thumbnail}}">
            <div class="article-overlay">
                <h3>{{ article.name|raw }}</h3>
                <div>
                    <p>Publié {{article.publicatedAt|ago}}</p>
                    <p>Dernière mise à jours {{article.createdAt|ago}}</p>
                </div>
            </div>
        </a>
    </div>
</div>